{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% form_theme profileForm 'bootstrap_5_layout.html.twig' %}

{% block body %}

{{ form_start(profileForm, { 'attr': {'novalidate': 'novalidate'} }) }}


<div class="row-col-6 g-3 justify-content-center">
    <h1>Modify Profile</h1>
    <div class="col-md-6">
		{{ form_row(profileForm.firstname) }}
	</div>
     <div class="col-md-6">
		{{ form_row(profileForm.lastname) }}
	</div>
     <div class="col-md-6">
		{{ form_row(profileForm.adresse) }}
	</div>
      <div class="col-md-6">
		{{ form_row(profileForm.city) }}
	</div>
     <div class="col-md-6">
		{{ form_row(profileForm.zipcode) }}
	</div>
      <div class="col-md-6">
		{{ form_row(profileForm.telephone) }}
	</div>

        {# pour sécurité, éviter d'attquer du CSRF #}
        {{ form_row(profileForm._token) }}

    <div class="col-md-3">
     <button type="submit" class="btn btn-primary">Modify</button>
</div>

{# n'afficher pas les restes des champs #}
{{ form_end(profileForm, {render_rest: false}) }}  



{% endblock %}