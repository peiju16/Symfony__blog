{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
    <div class="row">
    <div class="col-md-6">
    {{ include('flash.html.twig') }}

    <div class="card mb-3" style="">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{ asset('/uploads/products/' ~ product.picture)}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ product.name }}</h5>
        <p class="card-text">Price: {{ product.price }}â‚¬ </p>
        <p class="card-text">Description: {{ product.description }} </p>
        <p class="card-text">Description: {{ product.stock }} </p>
        <a href="{{ path('app_cart_add', {'idProduct': product.id}) }}"><button type="button" class="btn btn-primary">add in cart</button></a>
      </div>
    </div>
  </div>
</div>
       
    <a href="{{ path('app_product') }}" class="btn btn-primary m-1" role="button">back to list</a>
    {% if app.user and 'ROLE_ADMIN' in app.user.getroles() %}
    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary m-1" role="button">edit</a>
    {% endif %}

    {# {{ include('product/_delete_form.html.twig') }} #}
    </div>
</div>
{% endblock %}
