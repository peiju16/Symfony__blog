{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

        <div class= "row text-center">
        {{ include('flash.html.twig') }}
        {% for article in articles %}
        <div>
        <a href="{{path('app_article_show', { id: article.id} )}}">
			<div class="article d-flex p-3">

			{% if article.picture is empty %}
				<img class="col-md-4" src="{{ asset('/build/images/default.png')}}" alt="{{article.title}}" title="{{article.title}}">
			{% else %}
				<img class="col-md-4" src="{{ asset('/build/images/' ~ article.picture)}}" alt="{{article.title}}" title="{{article.title}}">
			{% endif %}

			<div class="col-md-8 d-flex flex-column align-items-center justify-content-center ms-2">
				<h3>{{article.title}}</h3>
				<p>{{article.description}}</p>
                <div class="col-md-4">
                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary m-1">show</a>
                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary m-1">edit</a>
                </div>
			</div>
		</div>
		</a>    
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        
     

          <a href="{{ path('app_article_new') }}" class="btn btn-primary m-1">Create new</a>

             </div>



    
{% endblock %}
